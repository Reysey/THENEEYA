<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@drawable/list_item_pressed_background" >
        <set>
            <objectAnimator
                android:propertyName="scaleX"
                android:valueTo="0.9"
                android:valueType="floatType"
                android:duration="150" />
            <objectAnimator
                android:propertyName="scaleY"
                android:valueTo="0.9"
                android:valueType="floatType"
                android:duration="150" />
        </set>
    </item>

    <item android:drawable="@color/deep_sea_space_1" />

</selector>